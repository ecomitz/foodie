<% include partials/header %>

<div class="container">

    <h1><%= title %></h1>

    <ul>
        <% foods.forEach(function (food) { %>
            <li>
                <%= food.name %> 
                
                <a href="#" class="deleteUser" data-id="<%= food._id %>">Delete</a>
				<a href="#" class="updateFood" data-id="<%= food._id %>">Update</a>
            </l1>
            <ul>
				<li>Category: <%=food.category %>
                <li>Serving Size: <%= food.servingSize %></li>
                <li>Calories Per Serving Size: <%= food.caloriesPerServingSize %></li>
                <li>Meal: <%= food.meal %></li>
            </ul>
        <% }) %>
    </ul>

    <h2>Add Food</h2>

    <% if (errors != undefined) { %>
        <ul>
        <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
        <% }) %>
        </ul>
    <% } %>

    <form method="POST" action="/foods/add">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" id="name" placeholder="E.x: Apple">
        </div>

        <div class="form-group">
            <label for="category">Category</label>
            <input type="text" name="category" id="category" placeholder="E.x Grain">
        </div>

        <div class="form-group">
            <label for="email">Serving Size</label>
            <input type="text" name="servingSize" id="servingSize" placeholder="E.x 3">
        </div>

        <div class="form-group">
            <label for="major">Calories per Serving Size</label>
            <input type="text" name="caloriesPerServingSize" id="caloriesPerServingSize" placeholder="e.x: 200 per serving">
        </div>

        <div class="form-group">
            <label for="gpa">meal</label>
            <input type="text" name="meal" id="meal" placeholder="e.x dinner">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

<% include partials/footer %>
